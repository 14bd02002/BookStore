@model BookStore2.Models.Book
<h3>Лучшая книга</h3>

<table>
    <tr>
        <td><img src="~/Images/@Model.ImagePath" /></td>
        <td><h3>@Html.DisplayFor(m => m.BookName)</h3></td>
        <td>Купили: @Html.DisplayFor(m => m.BoughtBooks) раз</td>

    </tr>
</table>
@if(Model == null)
{
    <h3>База пуста</h3>
}